<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_app_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:fontFamily="@font/ingrid_darling"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="120sp" />


    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/jacques_francois_shadow"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:text="@string/welcome"
        />


    <Button
        android:id="@+id/btn_new_here"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/jacques_francois"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="@string/Register"/>

    <Button
        android:id="@+id/btn_already_have_account"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/jacques_francois"
        android:padding="10dp"
        android:textSize="25sp"
        android:text="@string/login"
        android:textColor="@color/white" />


</LinearLayout>
